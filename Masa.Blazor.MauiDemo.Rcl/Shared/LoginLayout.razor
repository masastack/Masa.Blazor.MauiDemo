@using Masa.Blazor.Presets.PageStack
@inherits LayoutComponentBase
@inject IPlatformIntegration PlatformIntegration

<MApp>
    <MMain>
        <PPageStack TabRules="@_tabRules"
                    Class="fill-height">
            <MContainer Style="height: 100%">
                @Body
            </MContainer>
        </PPageStack>
    </MMain>
</MApp>

@code {

    private static HashSet<TabRule> _tabRules = [new TabRule("/login$")];

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await PlatformIntegration.InitThemeAsync();
        }
    }

}